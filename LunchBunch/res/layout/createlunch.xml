<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/createlunch_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <GridLayout
            android:id="@+id/createlunch"
            android:layout_width="match_parent"
            android:layout_height="428dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/wherelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:text="Where:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_gravity="bottom"
                android:layout_row="9"
                android:text="Comments:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_columnSpan="6"
                android:layout_row="12"
                android:ems="10"
                android:imeOptions="actionDone"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/confirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="15"
                android:layout_row="8"
                android:text="Request confirmation with reminder?"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <RadioGroup
                android:id="@+id/confirmgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_columnSpan="4"
                android:layout_row="9"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/yesConfirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_column="2"
                    android:layout_columnSpan="2"
                    android:layout_row="9"
                    android:layout_weight="0.21"
                    android:checked="true"
                    android:text="yes" />

                <RadioButton
                    android:id="@+id/noConfirmation"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_column="5"
                    android:layout_columnSpan="2"
                    android:layout_row="9"
                    android:layout_weight="0.18"
                    android:text="no" />
            </RadioGroup>

            <EditText
                android:id="@+id/pickWhere"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_columnSpan="3"
                android:layout_gravity="bottom"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:ems="10" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/datelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="6"
                android:layout_row="2"
                android:text="Date:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/timelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="6"
                android:layout_row="3"
                android:text="Time:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/pickDate"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="170dp"
                android:layout_height="34dp"
                android:layout_column="3"
                android:layout_columnSpan="3"
                android:layout_gravity="bottom"
                android:layout_row="2"
                android:text="Button" />

            <Button
                android:id="@+id/pickTime"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="170dp"
                android:layout_height="34dp"
                android:layout_column="3"
                android:layout_columnSpan="3"
                android:layout_gravity="bottom"
                android:layout_row="3"
                android:text="Button" />

            <Button
                android:id="@+id/doneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_columnSpan="2"
                android:layout_row="13"
                android:onClick="onDoneClicked"
                android:text="Done" />

            <RadioGroup
                android:id="@+id/remindergroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="4"
                android:layout_rowSpan="4"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/yesReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="6"
                    android:layout_row="4"
                    android:layout_rowSpan="3"
                    android:checked="true"
                    android:text="yes" />

                <RadioButton
                    android:id="@+id/noReminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="7"
                    android:layout_row="4"
                    android:layout_rowSpan="3"
                    android:text="no" />
            </RadioGroup>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="166dp"
                android:layout_height="33dp"
                android:layout_column="5"
                android:layout_gravity="bottom"
                android:layout_row="7" />

            <TextView
                android:id="@+id/reminderlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_row="5"
                android:layout_rowSpan="2"
                android:text="Send reminder?"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:id="@+id/sendreminderlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_columnSpan="5"
                android:layout_gravity="center_vertical"
                android:layout_row="7"
                android:text="Send reminder:"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Space
                android:layout_width="1dp"
                android:layout_height="21dp"
                android:layout_column="0"
                android:layout_row="0" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_row="4" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_row="4" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_row="4" />

            <Space
                android:layout_width="21dp"
                android:layout_height="1dp"
                android:layout_column="0"
                android:layout_row="0" />

            <Space
                android:layout_width="34dp"
                android:layout_height="1dp"
                android:layout_column="1"
                android:layout_row="0" />

            <Space
                android:layout_width="14dp"
                android:layout_height="1dp"
                android:layout_column="2"
                android:layout_row="0" />

            <Space
                android:layout_width="30dp"
                android:layout_height="1dp"
                android:layout_column="4"
                android:layout_row="0" />

            <Space
                android:layout_width="236dp"
                android:layout_height="1dp"
                android:layout_column="5"
                android:layout_row="0" />

            <Space
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_column="0"
                android:layout_row="8" />

            <Space
                android:layout_width="1dp"
                android:layout_height="56dp"
                android:layout_column="0"
                android:layout_row="9" />
        </GridLayout>

    </ScrollView>

</LinearLayout>